@import "fonts"
@import "colors"

@import "button"

// Background-images
$welcome-background-image = url('/images/keyboard_dark.jpg') top center no-repeat

// Sizes
$welcome-screen-height = 800px

$corner-height = 54px
$corner-width = 235px

$process-image-size = 100px
$process-popup-height = 150px
$process-popup-corner-top = 25px

$popup-corner-width = 11px
$popup-corner-height = 11px

// Colors
$html-font-color = $gray
$html-lines-color = $lgray

$offer-background-color = white
$process-background-color = #f1f1f1

$hover-color = $lblue

// Fonts
font-title()
   font-family 'Sansation'
   font-weight bold
   font-size 42px
   line-height 60px
   text-align center

font-subtitle()
   font-family 'DejaVu serif'
   font-style italic
   font-size 25px
   line-height 35px
   text-align center

font-menu()
   font-family 'Sansation'
   color $html-font-color
   font-size 20px

font-main()
   font-family 'PT Sans', 'Tahoma'
   font-style normal
   font-size 20px

font-main-italic()
   font-family 'DejaVu serif'
   font-style italic
   font-size 20px

html, body
   color $html-font-color
   font-main()

.title
   font-title()
.subtitle
   font-subtitle()

corner()
   display inline-block

   width 0
   height 0

   border-style solid
   border-width ($corner-height - 2px) ($corner-width/2) ($corner-height - 2px) ($corner-width/2)
   border-color transparent $offer-background-color

   padding-bottom 2px

.welcome-screen
   position absolute
   z-index 1

   text-align center

   width 100%
   height $welcome-screen-height
   min-height $welcome-screen-height

   top 0
   left 0

   background $welcome-background-image
   background-attachment fixed
   -webkit-background-size cover
   -moz-background-size cover
   -o-background-size cover
   background-size cover

   .content
      position absolute

      top ((($welcome-screen-height - $corner-height) - 145px) / 2)

      width 100%

      color white

   .button
      button(white, $hover-color)
      font-main()
      margin-top 1em
      cursor pointer

// Что мы предлагаем
.offer-screen
   width 100%

   // Добавим 2px для того, чтобы не появлялось странных артефактов, типа черной линии под треугольником
   margin-top $welcome-screen-height - $corner-height + 2px

   background-color $offer-background-color

   .corner-line-top
      position absolute
      z-index 2

      display inline-block

      width 100%
      height $corner-height

      overflow hidden

      table
         width 100%

      .corner-bottom
         corner()
         border-bottom none

      .left, .right
         background-color $offer-background-color
      .center
         width $corner-width - 2px

   .menu
      display inline-block

      width 100%
      margin-top $corner-height

      text-align center

      ul
         display inline-block

         padding 50px 0px

         li
            display inline-block
            float left

         a
            font-menu()
            text-decoration none
            padding 0px 20px
            border-right 1px dashed $html-lines-color

            &.last
               border-right none

   .title
      border-top 1px solid $html-lines-color
      border-bottom 1px solid $html-lines-color
      line-height 118px

   .content
      display table
      table-layout fixed
      width 100%
      margin 0
      cursor pointer

      .column
         display table-cell
         width 33.3%
         text-align center
         overflow hidden

         &.center
            width 33.4%
            border-left 1px solid $html-lines-color
            border-right 1px solid $html-lines-color

         .slider
            width 200%
            display table
            table-layout fixed
            -webkit-transition-duration 1s
            -moz-transition-duration 1s
            -ms-transition-duration 1s
            -o-transition-duration 1s
            transition-duration 1s

            &:hover
               margin-left -100%

//            .offer2
//               background-color red

            .offer1, .offer2
               width 50%
               display table-cell
               padding 30px

               .image
                  text-align center

               .header
                  font-main()
                  font-size 30px
                  line-height 70px

               .description
                  text-align justify
                  font-main()
                  font-size 16px
                  line-height 22px

                  table
                     width 100%

                     td
                        text-align center
                        border-bottom 1px solid $html-lines-color
                        line-height 40px

         .corner-up
            corner()
            border-up none

.works-screen
   height 800px

.process-screen
   background-color $process-background-color

   .content
      position relative
      margin-top 20px

      .vline
         position absolute
         width 1px
         //margin 0 auto
         left 50%
         height 100%
         background-color $html-lines-color

      .records
         //position absolute
         //width 100%
         //z-index 2
         ////background-color transparent
         //background-color $process-background-color

      .record
         padding-top 50px
         display table
         table-layout fixed
         padding-bottom 20px

         width 100%

         .image, .description, .name
            display table-cell

         .image
            width $process-image-size

            .frame
               position absolute

               img
                  display inline-block
                  width $process-image-size

               width $process-image-size
               height $process-image-size
               border-radius 1000px
               overflow hidden

         .description
            width 50%

            .popup
               background-color white
               height $process-popup-height
               margin (($process-image-size / 2) - $process-popup-corner-top - $popup-corner-height) 30px 0px 50px
               border-bottom 1px solid $html-lines-color

               position relative
               display table

               //display table-cell
               //vertical-align middle

               .popup-content
                  display table-cell
                  vertical-align middle
                  text-align center
                  width 100%
                  height 100%
                  font-main-italic()

               &:after
                  content ' '

                  position absolute
                  display inline-block
                  top $process-popup-corner-top

                  width 0
                  height 0

                  border-style solid
                  border-color transparent white

               &.left
                  &:after
                     border-width $popup-corner-height 0 $popup-corner-height ($popup-corner-width + 1px)
                     right (- $popup-corner-width)

               &.right
                  &:after
                     border-width $popup-corner-height ($popup-corner-width + 1px) $popup-corner-height 0
                     left (- $popup-corner-width)

         .name
            width 50%
            vertical-align top
            line-height $process-image-size
            font-main()
            font-family 'Sansation'

            &.left
               text-align right
               padding-right 25px

            &.right
               text-align left
               padding-left 25px



