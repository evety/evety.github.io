@import "fonts"
@import "colors"
@import "button"

// ============================= //
//       Background-images       //
// ============================= //
$welcome-screen-background      = url('/images/keyboard_dark.jpg') top center no-repeat
$form-screen-background         = url('/images/keyboard2.jpg') no-repeat

// ============================= //
//             Sizes             //
// ============================= //
$welcome-screen-height          = 800px

$offer-screen-corner-height     = 54px
$offer-screen-corner-width      = 235px

$process-image-size             = 100px
$process-popup-height           = 150px
$process-popup-corner-top       = 25px

$communication-circle-size      = 150px
$communication-image-size       = 50px

$popup-corner-width             = 11px
$popup-corner-height            = 11px

// ============================== //
//             Colors             //
// ============================== //
$html-font-color                = $gray
$html-lines-color               = $lgray

$welcome-screen-text-color      = white

$offer-background-color         = white

$process-background-color       = #f1f1f1

$communication-background-color = white
$communication-circle-color     = $html-lines-color
$communication-key-text-color   = #E27846

$button-hover-color                    = $lblue

// ============================= //
//             Fonts             //
// ============================= //
offer-screen-menu-font()
   font-family 'Sansation'
   color $html-font-color
   font-size 20px

// ============================== //
//            Elements            //
// ============================== //

offer-screen-corner()
   display inline-block

   width 0
   height 0

   border-style solid
   border-width ($offer-screen-corner-height - 2px) ($offer-screen-corner-width/2) ($offer-screen-corner-height - 2px) ($offer-screen-corner-width/2)
   border-color transparent $offer-background-color

   padding-bottom 2px

// ============================== //
//         Default styles         //
// ============================== //

html, body
   color $html-font-color

.title
   font-family 'Sansation'
   font-weight bold
   font-size 42px
   line-height 120px
   text-align center

.subtitle
   font-family 'DejaVu serif'
   font-style italic
   font-size 25px
   line-height 35px
   text-align center

// ============================== //
//         Welcome screen         //
// ============================== //

.welcome-screen
   position absolute
   display table

   z-index 1

   top 0
   left 0

   width 100%
   height $welcome-screen-height
   min-height $welcome-screen-height

   text-align center

   background $welcome-screen-background

   -webkit-background-size cover
   -moz-background-size cover
   -o-background-size cover
   background-size cover

   .content
      display table-cell
      vertical-align middle

      width 100%

      color $welcome-screen-text-color

   .button
      button($welcome-screen-text-color, $button-hover-color)
      margin-top 1em
      cursor pointer

// ============================== //
//          Offer screen          //
// ============================== //

.offer-screen
   width 100%

   // Добавим 2px для того, чтобы не появлялось странных артефактов, типа черной линии под треугольником
   margin-top $welcome-screen-height - $offer-screen-corner-height + 2px

   background-color $offer-background-color

   .corner-line-top
      position absolute
      z-index 2

      display inline-block

      width 100%
      height $offer-screen-corner-height

      overflow hidden

      table
         width 100%

      .corner-bottom
         offer-screen-corner()
         border-bottom none

      .left, .right
         background-color $offer-background-color
      .center
         width $offer-screen-corner-width - 2px

   .menu
      display inline-block

      width 100%
      margin-top $offer-screen-corner-height

      text-align center

      ul
         display inline-block

         padding 50px 0px

         li
            display inline-block
            float left

         a
            offer-screen-menu-font()
            text-decoration none
            padding 0px 20px
            border-right 1px dashed $html-lines-color

            &.last
               border-right none

   .title
      border-top 1px solid $html-lines-color
      border-bottom 1px solid $html-lines-color
      line-height 118px

   .content
      display table
      table-layout fixed
      width 100%
      margin 0
      cursor pointer

      .column
         display table-cell
         width 33.3%
         text-align center
         overflow hidden

         &.center
            width 33.4%
            border-left 1px solid $html-lines-color
            border-right 1px solid $html-lines-color

         .slider
            width 200%
            display table
            table-layout fixed
            -webkit-transition-duration 1s
            -moz-transition-duration 1s
            -ms-transition-duration 1s
            -o-transition-duration 1s
            transition-duration 1s

            &:hover
               margin-left -100%

//            .offer2
//               background-color red

            .offer1, .offer2
               width 50%
               display table-cell
               padding 30px

               .image
                  text-align center

               .header
                  font-main()
                  font-size 30px
                  line-height 70px

               .description
                  text-align justify
                  font-main()
                  font-size 16px
                  line-height 22px

                  table
                     width 100%

                     td
                        text-align center
                        border-bottom 1px solid $html-lines-color
                        line-height 40px

         .corner-up
            offer-screen-corner()
            border-up none

.works-screen
   height 800px

.process-screen
   background-color $process-background-color

   .content
      position relative
      margin-top 20px

      .vline
         position absolute
         width 1px
         //margin 0 auto
         left 50%
         height 100%
         background-color $html-lines-color

      .records
         //position absolute
         //width 100%
         //z-index 2
         ////background-color transparent
         //background-color $process-background-color

      .record
         padding-top 50px
         display table
         table-layout fixed
         padding-bottom 20px

         width 100%

         .image, .description, .name
            display table-cell

         .image
            width $process-image-size

            .frame
               position absolute

               display inline-block

               width $process-image-size
               height $process-image-size

               border-radius 50%
               -webkit-border-radius 50%
               -moz-border-radius 50%

               background-repeat no-repeat
               background-size cover

         .description
            width 50%

            .popup
               background-color white
               height $process-popup-height
               margin (($process-image-size / 2) - $process-popup-corner-top - $popup-corner-height) 30px 0px 50px
               border-bottom 1px solid $html-lines-color

               position relative
               display table

               //display table-cell
               //vertical-align middle

               .popup-content
                  display table-cell
                  vertical-align middle
                  text-align center
                  width 100%
                  height 100%
                  font-main-italic()

               &:after
                  content ' '

                  position absolute
                  display inline-block
                  top $process-popup-corner-top

                  width 0
                  height 0

                  border-style solid
                  border-color transparent white

               &.left
                  &:after
                     border-width $popup-corner-height 0 $popup-corner-height ($popup-corner-width + 1px)
                     right (- $popup-corner-width)

               &.right
                  &:after
                     border-width $popup-corner-height ($popup-corner-width + 1px) $popup-corner-height 0
                     left (- $popup-corner-width)

         .name
            width 50%
            vertical-align top
            line-height $process-image-size
            font-main()
            font-family 'Sansation'

            &.left
               text-align right
               padding-right 25px

            &.right
               text-align left
               padding-left 25px

.communication-screen
   background-color $communication-background-color

   box-shadow 0 0 10px rgba(0,0,0,0.5)

   .content
      display table
      width 100%
      table-layout fixed

      padding 60px 0 80px 0

      .record
         display table-cell
         text-align center
         overflow hidden

         .thumbnail
            width $communication-circle-size
            height $communication-circle-size
            display inline-block


            .circle
               width $communication-circle-size
               height $communication-circle-size
               display table-cell

               border-radius 50%
               -webkit-border-radius 50%
               -moz-border-radius 50%

               vertical-align middle
               text-align center

               background-color $communication-circle-color

               .image
                  width $communication-image-size
                  height $communication-image-size

                  display inline-block

                  background-repeat no-repeat
                  background-size contain
                  background-position center
         .key
            color $communication-key-text-color

.form-screen
   background $form-screen-background

   background-attachment fixed
   -webkit-background-size cover
   -moz-background-size cover
   -o-background-size cover
   background-size cover

   text-align center
   font-size 25px
   color white
   font-family 'DejaVu serif'
   width 100%
   padding-bottom 20px

   .title 
      font-family 'Sansation', 'Tahoma'
      font-size 42px
      line-height 120px
      font-weight bold
      text-align center
   

   .subtitle 
      font-family 'DejaVu serif'
      font-size 25px
      font-style italic
      text-align center
   

   form 
      width 50%
      margin auto
      color black
      font-style italic
      font-size 20px

      input, textarea 
         width 100%
         margin-bottom 20px
         background-color rgba(255, 255, 255, 0.3)
         border none
         color white
         padding 0px 15px
         border-radius 5px
         //border-top 1px solid white
         //border-bottom 1px solid white
      

      .button 
         line-height 50px
         background-color white
         border-radius 5px
         //border-top 1px solid white
         //border-bottom 1px solid white
         //color white
         width 50%
         margin auto
         border 1px solid white
         cursor pointer
         -webkit-transition-duration 0.6s
      

      .buttonhover 
         background-color transparent
         color white
      

      input 
         line-height 50px
      

      textarea 
         height 120px
      
   
